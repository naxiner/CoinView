<Application x:Class="CoinView.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CoinView"
             StartupUri="Views/HomeWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--Languages-->
                <ResourceDictionary Source="Resources/en/Strings.en.xaml"/>
                <ResourceDictionary Source="Resources/uk/Strings.uk.xaml"/>
                <ResourceDictionary Source="Resources/de/Strings.de.xaml"/>
                
                <!--Themes-->
                <ResourceDictionary Source="Resources/Themes/WhiteTheme.xaml"/>
                <ResourceDictionary Source="Resources/Themes/BlackTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
