<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--GlobalItems-->
    <SolidColorBrush x:Key="Text" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Border" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BorderBG" Color="#303030"/>
    <SolidColorBrush x:Key="ButtonBG" Color="#212121"/>

    <!--MenuTab-->
    <SolidColorBrush x:Key="MenuBG" Color="#444444"/>
    <SolidColorBrush x:Key="MenuButtonBG" Color="#232323"/>

    <!--TopPanel-->
    <SolidColorBrush x:Key="TopPanel" Color="#212121"/>
    <SolidColorBrush x:Key="MainWindowBorder" Color="#595959"/>
    <SolidColorBrush x:Key="MainWindowBG" Color="#797979"/>
    <SolidColorBrush x:Key="TopPanelButtonBG" Color="#494949"/>
    
    <!--SearchWindow-->
    <SolidColorBrush x:Key="SearchBG" Color="#303030"/>
    <SolidColorBrush x:Key="SearchBoxBG" Color="#E1E1E1"/>

    <!--ChartWindow-->
    <SolidColorBrush x:Key="ChartBG" Color="LightGray"/>

</ResourceDictionary>